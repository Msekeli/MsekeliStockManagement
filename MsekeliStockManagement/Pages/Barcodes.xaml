<Window x:Class="MsekeliStockManagement.Pages.Barcodes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MsekeliStockManagement.Pages"
        mc:Ignorable="d"
        Title="Barcodes" Height="350" Width="500">
    <Grid Margin="0,0,0,54">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Product Barcode" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="30" Margin="0,0,0,30"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,12,0,58" Grid.RowSpan="3">
            <Image Name="imgbarcode"/>
            <TextBlock Name="productBarcode" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
